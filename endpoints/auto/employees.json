{
    "getAll": {
        "route": "/employees",
        "method": "GET",
        "sql": "SELECT * FROM employees",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ],
        "description": "Gets all employees"
    },
    "getById": {
        "route": "/employees/$employeeId",
        "method": "GET",
        "sql": "SELECT * FROM employees WHERE employeeId = $employeeId",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ],
        "description": "Gets an entry from 'employees' by its primary key"
    },
    "create": {
        "route": "/employees",
        "method": "POST",
        "sql": "INSERT INTO employees(email, password, departmentId, bossId, firstName, lastName, salary, position) VALUES ($email, $password, $departmentId, $bossId, $firstName, $lastName, $salary, $position)",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "Creates a new entry in 'employees'",
        "request_body_params": [
            "email",
            "password",
            "departmentId",
            "bossId",
            "firstName",
            "lastName",
            "salary",
            "position"
        ]
    },
    "update": {
        "route": "/employees/$employeeId",
        "method": "PUT",
        "sql": "UPDATE employees SET email = $email, password = $password, departmentId = $departmentId, bossId = $bossId, firstName = $firstName, lastName = $lastName, salary = $salary, position = $position WHERE employeeId = $employeeId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "Updates an existing entry in 'employees' by its primary key",
        "request_body_params": [
            "email",
            "password",
            "departmentId",
            "bossId",
            "firstName",
            "lastName",
            "salary",
            "position"
        ]
    },
    "delete": {
        "route": "/employees/$employeeId",
        "method": "DELETE",
        "sql": "DELETE FROM employees WHERE employeeId = $employeeId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "Deletes an existing entry in 'employees' by its primary key"
    }
}